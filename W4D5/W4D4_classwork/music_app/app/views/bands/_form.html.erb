<h1><%= action == :edit ? "Edit an existing band" : "Create a new band" %></h1>

<% if action == :edit %>
  <% action_url = band_url(band)%>
<% else %>
  <% action_url = bands_url %>
<% end %>

<form action="<%= action_url %>" method="post">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>
  <%= auth_token %>
  <label for="band_name">Band Name</label>
  <input type="text"
    name="band[name]"
    id="band_name"
    value="<%= band.name %>">
  <br>

  <input type="submit" value="<%= action == :edit ? 'Update band' : 'Create band' %>">
</form>
